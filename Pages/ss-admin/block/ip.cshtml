@page
@{ Layout = "_Layout"; }

<div style="height: 10px"></div>

<el-form ref="form" :model="form" size="small" label-width="180px">
  <el-form-item label="IP地址" prop="ipAddress" name="ipAddress" :rules="{ required: true, message: '请输入IP地址' }">
    <el-input v-model="form.ipAddress"></el-input>
  </el-form-item>
  <el-form-item v-if="submitted" label="所在区域">
    {{ getArea() }}
  </el-form-item>
  <el-form-item v-if="submitted && isAllowed" label="访问状态">
    <el-alert type="success" size="mini" :closable="false"  title="允许访问"></el-alert>
  </el-form-item>
  <el-form-item v-if="submitted && !isAllowed" label="访问状态">
    <el-alert type="danger" size="mini" :closable="false" title="禁止访问"></el-alert>
  </el-form-item>
</el-form>

<div style="text-align: center;">
  <el-divider></el-divider>
  <div style="height: 10px"></div>
  
  <el-button size="small" type="primary" v-on:click="btnSubmitClick">
    查 询
  </el-button>
</div>

@section Scripts{
  <script src="/assets/block/js/ip.js" type="text/javascript"></script>
}