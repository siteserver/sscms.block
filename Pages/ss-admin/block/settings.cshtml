@page
@{ Layout = "_Layout"; }

<div style="height: 10px"></div>

<el-table :data="rules">
  <el-table-column prop="ruleName" label="规则名称" width="200"></el-table-column>
  <el-table-column prop="channels" label="拦截页面"></el-table-column>
  <el-table-column prop="createdDate" label="添加日期" width="160"></el-table-column>
  <el-table-column label="操作" width="130">
    <template slot-scope="scope">
      <el-link
        :underline="false"
        style="margin-right: 5px;"
        v-on:click="btnEditClick(scope.row)"
        type="primary">
        编 辑
      </el-link>
      <el-link
        :underline="false"
        type="danger"
        v-on:click="btnDeleteClick(scope.row)">
        删 除
      </el-link>
    </template>
  </el-table-column>
</el-table>

<div style="height: 10px"></div>
<el-divider></el-divider>
<div style="height: 10px"></div>

<el-button
  size="small"
  type="primary"
  v-on:click="btnAddClick()">
  添加拦截规则
</el-button>

@section Scripts{
  <script src="/assets/block/js/settings.js" type="text/javascript"></script>
}